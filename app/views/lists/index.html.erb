<div class="cover mb-4 d-flex align-items-center justify-content-center">
    <div class="scroll text-white text-center h-50">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js mt-4"></h3>
    <div class="scroll-down"></div>
    </div>
</div>

<div class="container py-2">
  <div class="d-flex align-items-center justify-content-between">
    <h3>My <%= @lists.count %> Lists</h3>
    <%= link_to 'Create a new movie List', new_list_path, class: "btn btn-flat" %>
  </div>

  <div class="row py-5" data-aos="zoom-out">
    <% @lists.each do |list| %>
      <div class="col-12 col-md-4 col-sm-6 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <div class="card-category index-small-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : asset_path('america.jpg') %>)">
            <h4><%= list.name %></h4>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

