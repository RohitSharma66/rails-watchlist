<div class="cover" style="background-image:url(<%= asset_url('pic1.jpeg') %>)">
    <div class="text-white text-center py-5">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js"></h3>
    </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between">
    <h3>My <%= @lists.count %> Lists</h3>
    <%= link_to 'Create a new movie List', new_list_path, class: "btn btn-flat" %>
  </div>

  <div class="row py-4" data-aos="zoom-out">
    <% @lists.each do |list| %>
      <div class="col-12 col-md-4 col-sm-6 mb-4">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <div class="card-category text-white d-flex justify-content-center align-items-center rounded shadow" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo, height: 300, width: 400, crop: :fill %>')">
            <h4><%= list.name %></h4>
          </div>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
            Cool article
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

